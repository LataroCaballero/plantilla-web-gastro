---
import business from '../data/business.json';
---

<section
  id="inicio"
  class="relative h-[90vh] flex items-center justify-center text-center overflow-hidden"
>
  <!-- Imagen de fondo -->
  <img
    src="/images/hero-cafe.jpg"
    alt="Café artesanal"
    class="absolute inset-0 w-full h-full object-cover brightness-[0.7]"
    loading="eager"
  />

  <!-- Overlay cálido -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/70 mix-blend-multiply"
  ></div>

  <!-- Contenido -->
  <div
    class="relative z-10 max-w-2xl mx-auto px-6 text-white animate-fadeIn"
  >
    <h1 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
      El sabor del mejor café en cada taza
    </h1>
    <p class="text-lg md:text-xl text-gray-200 mb-8">
      {business.description}
    </p>
    <a
      href={`https://wa.me/${business.whatsapp.replace(/[^0-9]/g, '')}`}
      class="px-8 py-3 rounded-full font-medium text-lg transition-transform transform hover:scale-105 shadow-lg"
      style={`background-color: ${business.colorPrimary}; color: ${business.colorAccent}`}
    >
      Hacenos tu pedido
    </a>
  </div>
</section>

<style is:global>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeIn {
    animation: fadeIn 1.3s ease forwards;
  }
</style>
