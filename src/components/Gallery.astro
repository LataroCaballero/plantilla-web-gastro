---
import business from "../data/business.json";

const galleryImages = [
  "/images/gallery-1.jpg",
  "/images/gallery-2.jpg",
  "/images/gallery-3.jpg",
  "/images/gallery-4.jpg",
  "/images/gallery-5.jpg",
  "/images/gallery-6.jpg",
  "/images/gallery-7.jpg",
  "/images/gallery-8.jpg"
];
---

<section id="galeria" class="py-24 bg-[var(--accent-bg)] relative overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 md:px-12 text-center mb-14">
    <h2
      class="text-3xl md:text-4xl font-bold mb-3"
      style={`color:${business.colorPrimary}`}
    >
      Instantes del Café
    </h2>
    <p class="text-lg text-gray-600">
      Momentos, aromas y texturas que hacen única la experiencia {business.name}.
    </p>
  </div>

  <!-- MASONRY GALLERY -->
  <div
    class="columns-2 md:columns-3 lg:columns-4 gap-4 space-y-4 max-w-6xl mx-auto px-6 md:px-12"
  >
    {galleryImages.map((src) => (
      <div class="relative overflow-hidden rounded-2xl group">
        <img
          src={src}
          alt="Café"
          class="w-full h-auto rounded-2xl transform transition-transform duration-700 ease-out group-hover:scale-110 group-hover:brightness-110"
          loading="lazy"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/40 via-black/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        ></div>
      </div>
    ))}
  </div>

  <!-- PARALLAX DECOR -->
  <div
    class="absolute top-0 left-0 w-full h-[200%] bg-[radial-gradient(circle_at_top_left,rgba(255,240,225,0.3),transparent_60%)] pointer-events-none animate-moveGlow"
  ></div>
</section>

<style is:global>
  :root {
    --accent-bg: #faf8f4;
  }

  @keyframes moveGlow {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10%);
    }
    100% {
      transform: translateY(0);
    }
  }
  .animate-moveGlow {
    animation: moveGlow 12s ease-in-out infinite;
  }
</style>
