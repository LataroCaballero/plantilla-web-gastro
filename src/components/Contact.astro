<style is:global>
  :root {
    --accent-bg: #f9f6f2;
    --text-color: #1a1a1a;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeIn {
    animation: fadeIn 1.3s ease forwards;
  }
</style>
